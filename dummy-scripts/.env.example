# ====================================
# PostgreSQL 데이터베이스 설정 (기존 DB 정보 입력)
# ====================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# ====================================
# AWS S3 설정
# ====================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=your-bucket-name
S3_PREFIX=voices/

# ====================================
# gTTS 및 음성 파일 설정
# ====================================
# 지원 언어: ko(한국어), en(영어), ja(일본어), zh(중국어) 등
GTTS_LANGUAGE=ko

# 느린 속도 배율 (0.75 = 75% 속도, 0.5 = 50% 속도)
# 낮을수록 더 느림 (MP3 파일로 생성됨)
SLOW_SPEED=0.75

# ====================================
# 데이터베이스 테이블 설정
# ====================================
# 단어가 저장된 테이블 이름
TABLE_NAME=words

# 음성으로 변환할 텍스트가 저장된 컬럼명
TEXT_COLUMN=word

# Primary Key 컬럼명
ID_COLUMN=id

# S3 URL을 저장할 컬럼명 (없으면 테이블에 추가 필요)
# 정상 속도 파일 URL
NORMAL_URL_COLUMN=voice_url

# 느린 속도 파일 URL
SLOW_URL_COLUMN=voice_url_slow

# ====================================
# WHERE 조건절 (선택사항)
# ====================================
# 예시:
# WHERE_CLAUSE=voice_url IS NULL  (아직 음성이 생성되지 않은 단어만)
# WHERE_CLAUSE=category = 'animals' AND voice_url IS NULL  (특정 카테고리만)
# WHERE_CLAUSE=  (모든 데이터 처리)
WHERE_CLAUSE=voice_url IS NULL
