{
  "title": "Reading Buddy - Spring Boot Metrics",
  "tags": ["spring-boot", "java", "jvm"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "JVM Memory Used",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "sum(jvm_memory_used_bytes{application=\"reading-buddy-backend\"}) by (area)",
          "legendFormat": "{{area}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      }
    },
    {
      "id": 2,
      "title": "JVM Memory Max",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "sum(jvm_memory_max_bytes{application=\"reading-buddy-backend\"}) by (area)",
          "legendFormat": "{{area}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      }
    },
    {
      "id": 3,
      "title": "CPU Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "system_cpu_usage{application=\"reading-buddy-backend\"}",
          "legendFormat": "System CPU Usage",
          "refId": "A"
        },
        {
          "expr": "process_cpu_usage{application=\"reading-buddy-backend\"}",
          "legendFormat": "Process CPU Usage",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "max": 1,
          "min": 0
        }
      }
    },
    {
      "id": 4,
      "title": "HTTP Requests Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{application=\"reading-buddy-backend\"}[5m])",
          "legendFormat": "{{method}} {{uri}} - {{status}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      }
    },
    {
      "id": 5,
      "title": "HTTP Request Duration (95th percentile)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{application=\"reading-buddy-backend\"}[5m])) by (le, uri))",
          "legendFormat": "{{uri}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "id": 6,
      "title": "Garbage Collection Count",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "targets": [
        {
          "expr": "rate(jvm_gc_pause_seconds_count{application=\"reading-buddy-backend\"}[5m])",
          "legendFormat": "{{action}} - {{cause}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        }
      }
    },
    {
      "id": 7,
      "title": "Thread Count",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
      "targets": [
        {
          "expr": "jvm_threads_live_threads{application=\"reading-buddy-backend\"}",
          "legendFormat": "Live Threads",
          "refId": "A"
        },
        {
          "expr": "jvm_threads_daemon_threads{application=\"reading-buddy-backend\"}",
          "legendFormat": "Daemon Threads",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    },
    {
      "id": 8,
      "title": "Database Connection Pool",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
      "targets": [
        {
          "expr": "hikaricp_connections_active{application=\"reading-buddy-backend\"}",
          "legendFormat": "Active Connections",
          "refId": "A"
        },
        {
          "expr": "hikaricp_connections_idle{application=\"reading-buddy-backend\"}",
          "legendFormat": "Idle Connections",
          "refId": "B"
        },
        {
          "expr": "hikaricp_connections_max{application=\"reading-buddy-backend\"}",
          "legendFormat": "Max Connections",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    }
  ],
  "refresh": "5s",
  "schemaVersion": 38,
  "version": 1,
  "uid": "spring-boot-metrics",
  "editable": true
}
